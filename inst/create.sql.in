CREATE TABLE
        loginsys_users
(
        user_id         INT                     NOT NULL        AUTO_INCREMENT,
        password        CHAR(@@PASS_LEN@@)      NOT NULL,

        last_logon      TIMESTAMP,

        PRIMARY KEY(user_id),
        UNIQUE(user_id)
);

